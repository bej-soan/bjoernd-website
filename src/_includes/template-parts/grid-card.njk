<li class="project-card">
    <a class="project-card__image-link" title="{{ cardContent.name }} öffnen" href="{{ cardContent.href }}">
    <div class="project-card__project-image-wrapper">
        
        <img class="project-card__project-image"
        srcset="/images/{{ cardContent.image }}@0,25x.jpg 576w,
                /images/{{ cardContent.image }}@0,5x.jpg 960w,
                /images/{{ cardContent.image }}@0,75x.jpg 1440w,
                /images/{{ cardContent.image }}.jpg 1920w"
        src="/images/{{ cardContent.image }}.jpg"
        alt="{{ cardContent.name }}" loading="lazy">
    </div>
    </a>

    <h3 class="project-card__title">{{ cardContent.name }}</h3>

    {% if cardContent.subtitle %}
        <p class="project-card__subtitle">{{ cardContent.subtitle }}</p>
    {% endif %}

    <a class="project-card__link {% if cardContent.internalLink %}project-card__link--internal{% else %}project-card__link--external{% endif %}" href="{{ cardContent.href }}" title="{{ cardContent.name }} öffnen">{{ cardContent.clean }}</a>

</li>